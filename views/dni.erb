
<div id="tocable" class="col-md-12">

  <form action='/dni' method='post' class="row form">
    <div class="col-sm-offset-4 col-sm-4 form-group">
      <input type="text" name="dni" class="form-control input-lg enfocable" required autofocus
        data-target="input[name='dni']"
        autocomplete="off"
      />

      <select name="tipo" class="form-control input-lg">
        <% Novedad::DOCUMENTOS.each do |tipo, nombre| %>
          <option <%= seleccionado(tipo) %> value="<%= tipo %>">
            <%= nombre %>
          </option>
        <% end %>
      </select>
    </div>


    <div class="col-sm-offset-4 col-sm-4 form-group teclado-contenedor"></div>

    <div class="row">
      <div class="col-sm-6 form-group pull-right">
        <button type="submit" class="btn btn-lg btn-success" data-disable-with="Enviando...">Continuar</button>
      </div>
      <div class="col-sm-6 form-group pull-left">
          <a onclick="history.back(-1)" class="btn btn-info btn-lg" data-target='#' href="#">Volver</a>
      </div>
    </div>
  </form>
</div>
